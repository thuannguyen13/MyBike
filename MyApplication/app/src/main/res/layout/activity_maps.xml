<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/Direction"
        app:cardElevation="5dp"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="100dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:layout_weight="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etOrigin"
                    android:layout_weight="1"
                    android:textSize="24sp"
                    android:hint="Name"
                    android:textColorHint="@color/cast_intro_overlay_background_color"
                    android:textColor="@color/cast_intro_overlay_background_color"
                    android:textColorHighlight="@color/cast_intro_overlay_background_color"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp" />

                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etAddress"
                android:layout_weight="1"
                    android:textSize="12sp"
                android:hint="Address"
                    android:textColorHint="@color/cast_intro_overlay_background_color"
                    android:textColor="@color/cast_intro_overlay_background_color"
                    android:textColorHighlight="@color/cast_intro_overlay_background_color"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp" />

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:id="@+id/Info"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_below="@+id/Direction"
                android:layout_alignParentStart="true"
                android:layout_height="match_parent"
                android:layout_weight="3">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/etDestination"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="12sp"
                        android:textColorHint="@color/cast_intro_overlay_background_color"
                        android:hint="Location"
                        android:textColor="@color/cast_intro_overlay_background_color"
                        android:textColorHighlight="@color/cast_intro_overlay_background_color" />

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_weight="1"
                        android:hint="Distance"
                        android:gravity="center"
                        android:layout_above="@+id/btnFindPath"
                        android:layout_alignEnd="@+id/Direction"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:textAllCaps="true"
                        android:textColorHint="@color/cast_intro_overlay_background_color"
                        android:textColor="@color/cast_intro_overlay_background_color"
                        android:textColorHighlight="@color/cast_intro_overlay_background_color" />

                    <TextView
                        android:id="@+id/tvDuration"
                        android:layout_weight="1"
                        android:hint="Duration"
                        android:layout_alignBottom="@+id/btnFindPath"
                        android:layout_toEndOf="@+id/btnFindPath"
                        android:layout_below="@+id/etDestination"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_height="match_parent"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:textColorHint="@color/cast_intro_overlay_background_color"
                        android:textColor="@color/cast_intro_overlay_background_color"
                        android:textColorHighlight="@color/cast_intro_overlay_background_color" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        tools:context="com.example.admin.mybike.MapsActivity"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" /><![CDATA[















     />










]]>
</RelativeLayout>




